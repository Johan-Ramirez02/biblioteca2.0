<h1>Index</h1>

<%= search_form_for @q do |f| %>
    <%= f.label :state_eq, 'State' %>
    <%= f.select :state_eq, options_for_select(@books.states, @q.state_eq) %>
    <%= f.submit %>
<% end %>


<table>
    <thead>
        <tr>
            <th><%= sort_link(@q, :titulo) %></th>
            <th><strong>Autor</strong></th>
            <th><strong>Status</strong></th>
            <th><strong>Prestado</strong></th>
            <th><strong>Regresado</strong></th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |b| %>
            <tr>
                <td><%= b.title %></td>
                <td><%= b.author %></td>
                <td><%= b.state %></td>
                <td><%= b.borrowed_at %></td>
                <td><%= b.returned_at %></td>
                <td><%= link_to 'Show', b %></td>
                <td><%= link_to 'Edit', edit_book_path(b) %></td>
                <td><%= link_to 'Destroy', b, method: :delete, data: {confirm: 'Se borrara el libro, estas seguro?'} %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Crear', new_book_path %>